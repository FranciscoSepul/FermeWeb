@model FermeWeb1._0.Models.Cliente

@{
    ViewBag.Title = "LogIn";
}
<link href="~/css/Iframe.css" rel="stylesheet">
<link href="~/css/panelLo.css" rel="stylesheet">
<link href="~/css/panelAjustarResp.css" rel="stylesheet">
<head>
    <iframe class="responsive-iframe" src="~/Header.html"></iframe>
</head>
<div class="container , center-block">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-6">
                            <li>@Html.ActionLink("LogIn", "LogIn", "Cliente")</li>
                        </div>
                        <div class="col-xs-6">
                            <li>@Html.ActionLink("Registrarme", "Registrar", "Cliente")</li>
                        </div>
                    </div>
                    <hr>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form id="login-form" action="enviarClave" method="post" role="form" style="display: block;">
                                <div class="form-group">
                                    <input type="email" name="correo" id="email" tabindex="1" class="form-control" placeholder="Email" value="">
                                </div>
                                <div class="form-group">
                                    <input type="text" name="runCli" id="password" tabindex="2" class="form-control" placeholder="Run Cliente">
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Recuperar Contraseña">
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
